<h1>Welcome to Recipe Gen!!</h1>

<div class="Accounts index">

  <%= link_to("Sign Up", {:action => 'new'}, :class => 'action new') %>

  <%= link_to("Sign In", {:action => 'sign_in'}, :class => 'action sign_in') %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
    </tr>
    <% @accounts.each do |account| %>
    <tr>
      <td><%= account.username %></td>
      <td><%= account.email %></td>
      <td><%= account.password %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => account.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => account.id} , :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => account.id} , :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
