
<% if !flash[:notice].blank? %>
          <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div>
  <p>Here's your profile information.</p>

  <table>   
    <tr>
      <th>Name</th>
      <td><%= @users.first_name %> <%= @users.last_name %> </td>
    </tr>
    <tr>
      <th>Bio</th>
      <td><%= @users.bio %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @users.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @users.updated_at %></td>
    </tr>

  </table>
<%= link_to "Edit your profile here", {:action => 'edit', :id => @users.id } %>
<br />
<%= link_to "Go back to Profile Page", { :action => 'index', :id => @users.id} %>
<br />
<%= link_to "View Your Recipes", user_recipes_path(@users, @recipes) %>
</div>




